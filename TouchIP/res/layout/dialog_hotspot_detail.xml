<?xml version='1.0' encoding='utf-8'?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/green_blue_gradient" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/dialog_image_view_type"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_view_rounded_single"
                android:orientation="horizontal"
                android:padding="5sp" >

                <ImageView
                    android:id="@+id/dialog_image_view_company_color"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/show_all" />
            </LinearLayout>

            <TextView
                android:id="@+id/dialog_edit_text_type"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.08"
                android:background="@drawable/background_view_rounded_single"
                android:inputType="none"
                android:padding="5sp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7sp" >

            <TextView
                android:id="@+id/dialog_edit_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_view_rounded_single"
                android:inputType="none"
                android:padding="5sp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7sp" >

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/dialog_edit_text_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_view_rounded_single"
                    android:inputType="none"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7sp" >

            <TextView
                android:id="@+id/dialog_edit_text_is_signed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_view_rounded_single"
                android:ems="10"
                android:inputType="none"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:textSize="20sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7sp" >

            <Button
                android:id="@+id/dialog_button_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/OK" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>