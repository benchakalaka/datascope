<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_map_activty_root_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/rootLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_view_rounded_single"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:background="@drawable/background_view_rounded_single" >

            <ImageView
                android:id="@+id/imageViewLeftArrowMenu"
                android:contentDescription="@null"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/settings" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="8dip"
                android:paddingLeft="20dp"
                android:text="@string/menu_settings"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/changeMapType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:background="@drawable/background_view_rounded_single" >

            <ImageView
                android:id="@+id/ima1geViewLeftA1rrowM1enu"
                android:contentDescription="@null"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/gmaps" />

            <TextView
                android:id="@+id/tesxtVisews1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="8dip"
                android:paddingLeft="20dp"
                android:text="@string/change_map_type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:background="@drawable/background_view_rounded_single" >

            <ImageView
                android:id="@+id/i1mageViewL1eftArr1owM1enu"
                android:contentDescription="@null"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/exit" />

            <TextView
                android:id="@+id/teaxtaVaiewa1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="8dip"
                android:paddingLeft="20dp"
                android:text="@string/start_exit"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>