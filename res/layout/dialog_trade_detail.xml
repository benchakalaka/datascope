<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rrll"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/dialog_trade_details_textview_amount"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/background_view_rounded_single"
			android:gravity="left"
			android:textColor="@android:color/white"
			android:textSize="20sp" />

		<TextView
			android:id="@+id/dialog_trade_details_textview_descritpion"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/background_view_rounded_single"
			android:gravity="left"
			android:textColor="@android:color/white"
			android:textSize="20sp" />

		<TextView
			android:id="@+id/dialog_trade_details_textview_company_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/background_view_rounded_single"
			android:gravity="left"
			android:textColor="@android:color/white"
			android:textSize="20sp" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >

			<TextView
				android:id="@+id/promptValue"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/background_view_rounded_single_trades"
				android:gravity="center"
				android:textColor="@android:color/background_dark"
				android:textSize="25sp" />
		</LinearLayout>

		<FrameLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" >

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical" >

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp" >

					<Button
						android:id="@+id/button1"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="1" />

					<Button
						android:id="@+id/button2"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="2" />

					<Button
						android:id="@+id/button3"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="3" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" >

					<Button
						android:id="@+id/button4"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="4" />

					<Button
						android:id="@+id/button5"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="5" />

					<Button
						android:id="@+id/button6"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="6" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" >

					<Button
						android:id="@+id/button7"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="7" />

					<Button
						android:id="@+id/button8"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="8" />

					<Button
						android:id="@+id/button9"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="9" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="20dp" >

					<Button
						android:id="@+id/buttonC"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="C" />

					<Button
						android:id="@+id/button0"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="0" />

					<ImageButton
						android:id="@+id/buttonDot"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:scaleType="centerInside"
						android:src="@drawable/left_arrow"
						android:text="@string/OK" />
				</LinearLayout>
			</LinearLayout>
		</FrameLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="10dp"
			android:orientation="horizontal"
			android:weightSum="2" >

			<Button
				android:id="@+id/buttonOk"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@drawable/background_view_rounded_single"
				android:text="OK" >
			</Button>

			<Button
				android:id="@+id/buttonCancel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@drawable/background_view_rounded_single"
				android:text="Cancel" >
			</Button>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>