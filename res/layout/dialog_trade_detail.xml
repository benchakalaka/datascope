<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rrll"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/default_screen_bg"
	android:orientation="vertical" >

	<!-- Header title view -->

	<LinearLayout
		android:id="@+id/llTopMenu"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:background="#53000000"
		android:clipChildren="false"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/ivTitleImage"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_margin="5dp"
			android:src="@drawable/trade" />

		<TextView
			android:id="@+id/tvTitle"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:text="Trade hotspot detail"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@android:color/white"
			android:textStyle="bold|italic" />
	</LinearLayout>

	<!-- Middle section -->

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/llBottomMenu"
		android:layout_below="@+id/llTopMenu"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/dialog_trade_details_textview_amount"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:background="@drawable/background_view_rounded_single"
			android:gravity="left"
			android:padding="3dp"
			android:textColor="@android:color/white"
			android:textSize="20sp" />

		<TextView
			android:id="@+id/dialog_trade_details_textview_descritpion"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:background="@drawable/background_view_rounded_single"
			android:gravity="left"
			android:padding="3dp"
			android:textColor="@android:color/white"
			android:textSize="20sp" />

		<TextView
			android:id="@+id/dialog_trade_details_textview_company_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:background="@drawable/background_view_rounded_single"
			android:gravity="left"
			android:padding="3dp"
			android:textColor="@android:color/white"
			android:textSize="20sp" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >

			<TextView
				android:id="@+id/promptValue"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/background_view_rounded_single_trades"
				android:gravity="center"
				android:padding="3dp"
				android:textColor="@android:color/background_dark"
				android:textSize="25sp" />
		</LinearLayout>

		<FrameLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" >

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical" >

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp" >

					<Button
						android:id="@+id/button1"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="1"
						android:textColor="@android:color/white" />

					<Button
						android:id="@+id/button2"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="2"
						android:textColor="@android:color/white" />

					<Button
						android:id="@+id/button3"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="3"
						android:textColor="@android:color/white" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" >

					<Button
						android:id="@+id/button4"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="4"
						android:textColor="@android:color/white" />

					<Button
						android:id="@+id/button5"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="5"
						android:textColor="@android:color/white" />

					<Button
						android:id="@+id/button6"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="6"
						android:textColor="@android:color/white" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" >

					<Button
						android:id="@+id/button7"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="7"
						android:textColor="@android:color/white" />

					<Button
						android:id="@+id/button8"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="8"
						android:textColor="@android:color/white" />

					<Button
						android:id="@+id/button9"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="9"
						android:textColor="@android:color/white" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="20dp" >

					<Button
						android:id="@+id/buttonC"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="C"
						android:textColor="@android:color/white" />

					<Button
						android:id="@+id/button0"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:text="0"
						android:textColor="@android:color/white" />

					<ImageButton
						android:id="@+id/buttonDot"
						android:layout_width="75dp"
						android:layout_height="50dp"
						android:background="@drawable/background_view_rounded_single"
						android:scaleType="centerInside"
						android:src="@drawable/left_arrow"
						android:text="@string/OK" />
				</LinearLayout>
			</LinearLayout>
		</FrameLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/llBottomMenu"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="10dp"
		android:orientation="horizontal"
		android:weightSum="2" >

		<Button
			android:id="@+id/buttonOk"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="OK" >
		</Button>

		<Button
			android:id="@+id/buttonCancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Cancel" >
		</Button>
	</LinearLayout>

</RelativeLayout>