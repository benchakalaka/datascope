<?xml version='1.0' encoding='utf-8'?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rrr"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/default_screen_bg" >

	<!-- Header title view -->

	<LinearLayout
		android:id="@+id/llTopMenu"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:background="#53000000"
		android:clipChildren="false"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/ivTitleImage"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_margin="5dp"
			android:src="@drawable/trade" />

		<TextView
			android:id="@+id/tvTitle"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:text="Create Trade Hotspot"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@android:color/white"
			android:textStyle="bold|italic" />
	</LinearLayout>

	<ScrollView
		android:id="@+id/swroot"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/llTopMenu" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="5dp" >

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="7sp" >

				<TextView
					android:id="@+id/twTradeDescritpion"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/background_view_rounded_single"
					android:padding="5sp"
					android:text="Hotspot name"
					android:textColor="#FFFFFF"
					android:textSize="20sp"
					android:textStyle="bold" />

				<LinearLayout
					android:id="@+id/permits_details_linear_layout"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:padding="7sp" >

					<TextView
						android:id="@+id/tw2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="left"
						android:padding="5dip"
						android:text="Valid from:"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:textColor="@android:color/white" />

					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/background_view_rounded_single"
						android:orientation="horizontal" >

						<TextView
							android:id="@+id/twValidFrom"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center"
							android:textAppearance="?android:attr/textAppearanceLarge"
							android:textColor="@android:color/white" />

						<ImageButton
							android:id="@+id/ibValidFrom"
							android:layout_width="50dp"
							android:layout_height="50dp"
							android:layout_gravity="right"
							android:scaleType="fitXY"
							android:src="@drawable/calendar" />
					</LinearLayout>

					<TextView
						android:id="@+id/tw"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="left"
						android:padding="5dip"
						android:text="Valid to:"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:textColor="@android:color/white" />

					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/background_view_rounded_single"
						android:orientation="horizontal" >

						<TextView
							android:id="@+id/twValidTo"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center"
							android:textAppearance="?android:attr/textAppearanceLarge"
							android:textColor="@android:color/white" />

						<ImageButton
							android:id="@+id/ibValidTo"
							android:layout_width="50dp"
							android:layout_height="50dp"
							android:scaleType="fitXY"
							android:src="@drawable/calendar" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="7sp"
				android:weightSum="2" >


				<Button
					android:id="@+id/btnOk"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/OK" />

				<Button
					android:id="@+id/btnCancel"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/cancel" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>

</RelativeLayout>