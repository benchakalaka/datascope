<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topscroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- PARENT TABLELAYOUT -->

    <TableLayout
        android:id="@+id/activity_start_button_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#008300"
        android:stretchColumns="*" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/start_imageview_logo"
                android:layout_width="0dip"
                android:layout_height="80dp"
                android:layout_weight="2.06"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/triangle" />
        </LinearLayout>

        <TableRow>
            <ImageButton
                android:id="@+id/buttonUpdateApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/refresh" />

            <ImageButton
                android:id="@+id/buttonCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:src="@drawable/calendar" />
        </TableRow>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/start_textview_drawing"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/update_app"
                android:textColor="#0D80BA"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/start_textview_calendar"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/start_calendar"
                android:textColor="#0D80BA"
                android:textStyle="bold|italic" />
        </LinearLayout>

      

        <TableRow>

            <ImageButton
                android:id="@+id/buttonSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:src="@drawable/settings" />

            <ImageButton
                android:id="@+id/buttonExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:src="@drawable/triangle" />
        </TableRow>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/start_textview_label_settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/settings"
                android:textColor="#0D80BA"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/start_textview_exit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/start_exit"
                android:textColor="#0D80BA"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </TableLayout>

</ScrollView>