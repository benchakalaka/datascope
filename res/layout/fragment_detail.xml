<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/ab_background"
	android:orientation="vertical" >

	<!-- Custom View -->

	<com.touchip.organizer.activities.custom.components.CompaniesDrawingView
		android:id="@+id/DRAW_VIEW"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_above="@+id/linead"
		android:layout_margin="3dp"
		android:background="#FFFFFFFF"
		android:padding="5dp" />

	<HorizontalScrollView
		android:id="@+id/linead"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_margin="2dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true" >

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="@color/ab_background"
			android:orientation="horizontal" >

			<ImageView
				android:id="@+id/ibUndo"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_margin="4dp"
				android:contentDescription="@null"
				android:padding="4dp"
				android:scaleType="fitXY"
				android:src="@drawable/left" />

			<ImageView
				android:id="@+id/ibRedo"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_margin="4dp"
				android:contentDescription="@null"
				android:padding="4dp"
				android:scaleType="fitXY"
				android:src="@drawable/right" />

			<ImageView
				android:id="@+id/ibBrushSize"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_margin="4dp"
				android:contentDescription="@null"
				android:padding="4dp"
				android:scaleType="fitXY"
				android:src="@drawable/medium_2" />

			<ImageView
				android:id="@+id/ibWb"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_margin="4dp"
				android:contentDescription="@null"
				android:padding="4dp"
				android:scaleType="fitXY"
				android:src="@drawable/wb" />

			<ImageView
				android:id="@+id/ibResources"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_margin="4dp"
				android:contentDescription="@null"
				android:padding="4dp"
				android:scaleType="fitXY"
				android:src="@drawable/trades_res" />

			<ImageView
				android:id="@+id/ibHotspots"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_margin="4dp"
				android:contentDescription="@null"
				android:padding="4dp"
				android:scaleType="fitXY"
				android:src="@drawable/priority" />

			<ImageView
				android:id="@+id/ibChangeFloor"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_margin="4dp"
				android:contentDescription="@null"
				android:padding="4dp"
				android:scaleType="fitXY"
				android:src="@drawable/floorss" />

			<ImageView
				android:id="@+id/ibChangeDate"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_margin="4dp"
				android:contentDescription="@null"
				android:padding="4dp"
				android:scaleType="fitXY"
				android:src="@drawable/calendar_1" />

			<ImageView
				android:id="@+id/ibRefresh"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_margin="4dp"
				android:contentDescription="@null"
				android:padding="4dp"
				android:scaleType="fitXY"
				android:src="@drawable/refresh" />
		</LinearLayout>
	</HorizontalScrollView>

	<LinearLayout
		android:id="@+id/linearLayout1ss"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/linead"
		android:layout_alignParentLeft="true"
		android:layout_margin="20dp"
		android:orientation="horizontal" >

		<TextView
			android:id="@+id/tvSPN"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center"
			android:layout_weight="1"
			android:text="Area: ?"
			android:padding="3dp"
			android:textColor="@android:color/white"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:background="@drawable/bg_round_half_visibility"
			 />
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/linead"
		android:layout_alignParentRight="true"
		android:background="@drawable/background_fenced"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/ivCompanyColor"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_margin="5dp"
			android:background="@drawable/question" />
	</LinearLayout>

</RelativeLayout>