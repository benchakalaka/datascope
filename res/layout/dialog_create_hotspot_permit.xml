<?xml version='1.0' encoding='utf-8'?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/swroot"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/default_screen_bg" >

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="5dp" >

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="7sp" >

			<TextView
				android:id="@+id/dialog_edit_text_id"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/background_view_rounded_single"
				android:padding="5sp"
				android:text="Hotspot name"
				android:textColor="#FFFFFF"
				android:textSize="20sp"
				android:textStyle="bold" />

			<LinearLayout
				android:id="@+id/permits_details_linear_layout"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="7sp" >

				<Spinner
					android:id="@+id/spinner"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:padding="5dip" />

				<TextView
					android:id="@+id/tw2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:padding="5dip"
					android:text="Valid from:"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textColor="@android:color/white" />

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/background_view_rounded_single"
					android:orientation="horizontal" >

					<TextView
						android:id="@+id/tvValidFrom"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:textColor="@android:color/white" />

					<ImageButton
						android:id="@+id/ibValidFrom"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:layout_gravity="right"
						android:scaleType="fitXY"
						android:src="@drawable/calendar" />
				</LinearLayout>

				<TextView
					android:id="@+id/tw"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:padding="5dip"
					android:text="Valid to:"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textColor="@android:color/white" />

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/background_view_rounded_single"
					android:orientation="horizontal" >

					<TextView
						android:id="@+id/tvValidTo"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:textColor="@android:color/white" />

					<ImageButton
						android:id="@+id/ibValidTo"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:scaleType="fitXY"
						android:src="@drawable/calendar" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/llBottomMenu"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:background="@color/ab_background"
			android:orientation="horizontal" >

			<ImageView
				android:id="@+id/ivOk"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_margin="3dp"
				android:layout_weight="1"
				android:src="@drawable/ok" />
		</LinearLayout>
	</LinearLayout>

</ScrollView>