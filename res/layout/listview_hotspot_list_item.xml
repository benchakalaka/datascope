<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/ab_background" >

	<LinearLayout
		android:id="@+id/list_hotspots_image2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="3dp"
		android:background="@drawable/background_view_circle_single"
		android:orientation="horizontal"
		android:padding="6sp" >

		<ImageView
			android:id="@+id/list_hotspots_image"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="center_vertical"
			android:contentDescription="@null" />
	</LinearLayout>

	<TextView
		android:id="@+id/list_hotspots_text_view"
		android:layout_width="wrap_content"
		android:layout_height="50dp"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/list_hotspots_companyColour"
		android:layout_toRightOf="@+id/list_hotspots_image2"
		android:text="asdasda"
		android:textColor="#AAADA5"
		android:textSize="10sp"
		android:textStyle="bold" />

	<ImageView
		android:id="@+id/list_hotspots_companyColour"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:background="@drawable/background_view_circle_single"
		android:contentDescription="@null" />

</RelativeLayout>