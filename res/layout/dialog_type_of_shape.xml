<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:hint="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@color/default_screen_bg" >

	<!-- Header title view -->

	<LinearLayout
		android:id="@+id/llTopMenu"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:background="#53000000"
		android:clipChildren="false"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/ivTitleImage"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_margin="5dp"
			android:src="@drawable/different_shapes" />

		<TextView
			android:id="@+id/tvTitle"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:text="Choose type of shape"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@android:color/white"
			android:textStyle="bold|italic" />
	</LinearLayout>

	<!-- Middle section -->

	<LinearLayout
		android:id="@+id/llTypeOfShapes"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/llTopMenu"
		android:layout_margin="5dp"
		android:background="#22000000"
		android:orientation="horizontal"
		android:padding="5dp" >

		<RelativeLayout
			android:id="@+id/rlSimple"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_weight="1" >

			<ImageView
				android:id="@+id/ivSimple"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_centerInParent="true"
				android:layout_margin="3dp"
				android:background="@drawable/background_view_rounded_single"
				android:padding="5dp"
				android:src="@drawable/free_drawing_3" />

			<ImageView
				android:id="@+id/ivSimpleSelected"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_alignRight="@+id/ivSimple"
				android:src="@drawable/ok48selected"
				android:visibility="invisible" />
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rlLine"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_weight="1" >

			<ImageView
				android:id="@+id/ivLine"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_centerInParent="true"
				android:layout_margin="3dp"
				android:background="@drawable/background_view_rounded_single"
				android:padding="5dp"
				android:src="@drawable/line_2" />

			<ImageView
				android:id="@+id/ivLineSelected"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_alignRight="@+id/ivLine"
				android:src="@drawable/ok48selected"
				android:visibility="invisible" />
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rlRectangle"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_weight="1" >

			<ImageView
				android:id="@+id/ivRectangle"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_centerInParent="true"
				android:layout_margin="3dp"
				android:background="@drawable/background_view_rounded_single"
				android:padding="5dp"
				android:src="@drawable/rectangle_1" />

			<ImageView
				android:id="@+id/ivRectangleSelected"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_alignRight="@+id/ivRectangle"
				android:src="@drawable/ok48selected"
				android:visibility="invisible" />
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rlTriangle"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_weight="1" >

			<ImageView
				android:id="@+id/ivTriangle"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_centerInParent="true"
				android:layout_margin="3dp"
				android:background="@drawable/background_view_rounded_single"
				android:padding="5dp"
				android:src="@drawable/triangle_1" />

			<ImageView
				android:id="@+id/ivTriangleSelected"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_alignRight="@+id/ivTriangle"
				android:src="@drawable/ok48selected"
				android:visibility="invisible" />
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rlCircle"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_weight="1" >

			<ImageView
				android:id="@+id/ivCircle"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_centerInParent="true"
				android:layout_margin="3dp"
				android:background="@drawable/background_view_rounded_single"
				android:padding="5dp"
				android:src="@drawable/circle" />

			<ImageView
				android:id="@+id/ivCircleSelected"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_alignRight="@+id/ivCircle"
				android:src="@drawable/ok48selected"
				android:visibility="invisible" />
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rlArrow"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_weight="1" >

			<ImageView
				android:id="@+id/ivArrow"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_centerInParent="true"
				android:layout_margin="3dp"
				android:background="@drawable/background_view_rounded_single"
				android:padding="5dp"
				android:src="@drawable/arrow" />

			<ImageView
				android:id="@+id/ivArrowSelected"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_alignRight="@+id/ivArrow"
				android:src="@drawable/ok48selected"
				android:visibility="invisible" />
		</RelativeLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/llTopMenu2"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_below="@+id/llTypeOfShapes"
		android:background="#53000000"
		android:clipChildren="false"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/ivChangeBrushSize"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_margin="5dp"
			android:src="@drawable/color_picker" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:text="Change brush size"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@android:color/white"
			android:textStyle="bold|italic" />
	</LinearLayout>

	<RelativeLayout
		android:id="@+id/rlBrushSize"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/llTopMenu2"
		android:layout_margin="5dp"
		android:background="#22000000"
		android:orientation="horizontal"
		android:padding="5dp" >

		<com.touchip.organizer.utils.seekbarhint.SeekBarHint
			android:id="@+id/sbBrushSize"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#22000000"
			android:max="30"
			hint:popupStyle="follow"
			hint:popupWidth="100dp"
			hint:yOffset="65dp" />
	</RelativeLayout>
	<!-- Middle section -->

</RelativeLayout>