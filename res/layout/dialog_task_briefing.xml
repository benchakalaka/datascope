<?xml version='1.0' encoding='utf-8'?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/svc"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/caldroid_white" >

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="10sp" >

		<TextView
			android:id="@+id/dialog_edit_text_type"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/briefing_gradient"
			android:singleLine="true"
			android:text="Task Control Summary"
			android:textColor="@color/caldroid_black"
			android:textSize="25sp"
			android:textStyle="italic" >
		</TextView>

		<TableLayout
			android:id="@+id/tableLayout_risk_schedule"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" >

			<TableRow>

				<TextView
					android:id="@+id/twCompanyName"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/background_view_rounded_single"
					android:layout_weight="1"
					android:padding="5sp"
					android:text="LLANDUDNO TRANSPORT INTERCHANGE"
					android:textColor="@android:color/white"
					android:textSize="25sp"
					android:textStyle="bold" >
				</TextView>
			</TableRow>

			<TableRow android:weightSum="2">

				<TextView
					android:id="@+id/twProjectNameLabel"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/background_view_rounded_single_trades"
					android:inputType="none"
					android:layout_weight="2"
					android:padding="5sp"
					android:text="Scope of Works"
					android:textSize="23sp"
					android:textStyle="italic" >
				</TextView>

				<TextView
					android:id="@+id/twScopeOfWorks"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:background="@drawable/background_view_rounded_single_trades"
					android:padding="5sp"
					android:text="Erect Scaffold"
					android:textSize="23sp"
					android:textStyle="bold" >
				</TextView>
			</TableRow>

			<TableRow android:weightSum="3">

				<TextView
					android:id="@+id/twCompanyNameLabel"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="3"
					android:background="@drawable/background_view_rounded_single_trades"
					android:padding="5sp"
					android:text="Name of Supervisor"
					android:textSize="23sp"
					android:textStyle="italic" >
				</TextView>

				<TextView
					android:id="@+id/twNameOfSupervisior"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/background_view_rounded_single_trades"
					android:padding="5sp"
					android:text="A Butt"
					android:layout_weight="1"
					android:textSize="23sp"
					android:textStyle="bold" >
				</TextView>
				
				<TextView
					android:id="@+id/twNameOfSupervisiorDate"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:background="@drawable/background_view_rounded_single_trades"
					android:inputType="none"
					android:padding="5sp"
					android:text="Date : 05/05/2014"
					android:textSize="23sp"
					android:textStyle="bold" >
				</TextView>
				
				
			</TableRow>

			<TableRow android:weightSum="3">

				<TextView
					android:id="@+id/twCompanyNameLabel"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/background_view_rounded_single_trades"
					android:padding="5sp"
					android:layout_weight="3"
					android:text="Reviewed By"
					android:textSize="23sp"
					android:textStyle="italic" >
				</TextView>

				<TextView
					android:id="@+id/twRevievedBy"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/background_view_rounded_single_trades"
					android:padding="5sp"
					android:text="S Foster"
					android:layout_weight="1"
					android:textSize="23sp"
					android:textStyle="bold" >
				</TextView>
				
				<TextView
					android:id="@+id/twRevievedByDate"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/background_view_rounded_single_trades"
					android:inputType="none"
					android:padding="5sp"
					android:layout_weight="1"
					android:text="Date : 05/05/2014"
					android:textSize="23sp"
					android:textStyle="bold" >
				</TextView>
				
				
			</TableRow>

			<TableRow>

				<TextView
					android:id="@+id/twActivitiesAndRiskHazardLabel"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="@drawable/background_view_rounded_single"
					android:padding="5sp"
					android:text="The following health, safety and environmental controls must be followed at all times during these works:"
					android:textColor="@android:color/white"
					android:textSize="25sp"
					android:textStyle="bold" />
			</TableRow>
		</TableLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="7sp" >

			<Button
				android:id="@+id/dialog_button_ok"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/OK" />
		</LinearLayout>
	</LinearLayout>

</ScrollView>