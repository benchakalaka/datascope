	<LinearLayout
		android:id="@+id/llChangeTextSize"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/llBottomMenu"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:background="@color/ab_calendar_cell_bg"
		android:orientation="horizontal"
		android:visibility="gone" >

		<ImageButton
			android:id="@+id/ibCreateNewWhiteboard"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_margin="4dp"
			android:background="@drawable/background_view_rounded_single_trades"
			android:contentDescription="@null"
			android:scaleType="fitXY"
			android:src="@drawable/add" />

		<ImageButton
			android:id="@+id/ibLoadWhiteboard"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_margin="4dp"
			android:background="@drawable/background_view_rounded_single_trades"
			android:contentDescription="@null"
			android:scaleType="fitXY"
			android:src="@drawable/download" />

		<ImageButton
			android:id="@+id/ibClearAll"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_margin="4dp"
			android:background="@drawable/background_view_rounded_single_trades"
			android:contentDescription="@null"
			android:scaleType="fitXY"
			android:src="@drawable/blank" />

		<ImageButton
			android:id="@+id/ibSaveDrawing"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_margin="4dp"
			android:background="@drawable/background_view_rounded_single_trades"
			android:contentDescription="@null"
			android:scaleType="fitXY"
			android:src="@drawable/save" />

		<ImageButton
			android:id="@+id/ibRefreshWhiteboard"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_margin="4dp"
			android:background="@drawable/background_view_rounded_single_trades"
			android:contentDescription="@null"
			android:scaleType="fitXY"
			android:src="@drawable/refresh_1" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/llBottomMenu"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="@color/ab_background"
		android:orientation="horizontal" >

		<RelativeLayout
			android:id="@+id/rlShapesCircle"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_weight="1" >

			<ImageView
				android:id="@+id/ivShapes"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_centerInParent="true"
				android:layout_margin="3dp"
				android:src="@drawable/shapes" />

			<ImageView
				android:id="@+id/ivShapesSelected"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_alignParentTop="true"
				android:layout_centerInParent="true"
				android:src="@drawable/ok48selected"
				android:visibility="invisible" />
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rlWhiteboardSettings"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_weight="1" >

			<ImageView
				android:id="@+id/ivWhiteboardSettings"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_centerInParent="true"
				android:layout_margin="3dp"
				android:src="@drawable/settings" />

			<ImageView
				android:id="@+id/ivWhiteboardSettingsSelected"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_alignParentTop="true"
				android:layout_centerInParent="true"
				android:src="@drawable/ok48selected"
				android:visibility="invisible" />
		</RelativeLayout>
	</LinearLayout>

