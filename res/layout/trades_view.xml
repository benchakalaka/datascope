<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_view_rounded_single"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/twTradeAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_view_rounded_single_amount_of_people"
        android:paddingBottom="5dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/twTradeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/trade"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FBFB44"
        android:textStyle="italic" >
    </TextView>

</RelativeLayout>