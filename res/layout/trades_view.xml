<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/black"
	android:orientation="horizontal" >

	<ImageView
		android:id="@+id/iviviv"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_alignParentLeft="true"
		android:background="@drawable/background_rounded_assets"
		android:layout_alignParentTop="true"
		android:src="@drawable/trade" />

	<TextView
		android:id="@+id/twTradeAmount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:background="@drawable/background_view_rounded_single_trades"
		android:paddingBottom="5dp"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:paddingTop="5dp"
		android:text="101"
		android:textColor="@android:color/black"
		android:textStyle="italic|bold" />

	<TextView
		android:id="@+id/twTradeDescription"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/iviviv"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@+id/iviviv"
		android:gravity="center"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@android:color/holo_orange_dark" />

</RelativeLayout>